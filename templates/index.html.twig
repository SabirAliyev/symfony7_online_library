{%  extends 'base.html.twig' %}

{%  block title %} Index Title {%  endblock %}

{%  block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h3>Book List</h3>

    <div>
        {% if books|length > 0 %}
            {% for book in books %}
                <div style="margin-bottom: 10px;">
                    <!-- Link to view book details -->
                    <a href="{{ path('app_book_show', { id: book.id }) }}" style="font-weight: bold; color: darkblue;">
                        {{ book.title }} - ({{ book.author }})
                    </a>

                    <!-- Link to edit book -->
                    <a href="{{ path('app_book_edit', { id: book.id }) }}" class="btn btn-secondary" style="margin-left: 10px;">
                        Edit
                    </a>
                </div>
            {% endfor %}
        {% else %}
            <p>No books found.</p>
        {% endif %}
    </div>
</div>

{%  endblock %}