<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ form.vars.value.id ? 'Edit Book' : 'Add New Book' }}</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

{% include '_header.html.twig' %}

<!-- Main Content -->
<div class="container py-5">
    <div class="row">
        <!-- Left Section for Book Form -->
        <div class="col-md-6">
            <h2 class="mb-4">Add New Book</h2> <!-- Change dynamically to "Edit Book" if needed -->

            <!-- Display error messages -->
            <div class="alert alert-danger" style="display: none;">
                <!-- Placeholder for form errors -->
                <!-- Dynamically add error messages here -->
            </div>

            <!-- Add/Edit Book Form -->
            <form method="post" action="/book/add-or-edit">
                <!-- Author Field -->
                <div class="mb-3">
                    <label for="inputAuthor" class="form-label">Author</label>
                    <input type="text" id="inputAuthor" name="author" class="form-control" required>
                </div>

                <!-- Title Field -->
                <div class="mb-3">
                    <label for="inputTitle" class="form-label">Title</label>
                    <input type="text" id="inputTitle" name="title" class="form-control" required>
                </div>

                <!-- Genre Field -->
                <div class="mb-3">
                    <label for="inputGenre" class="form-label">Genre</label>
                    <input type="text" id="inputGenre" name="genre" class="form-control" required>
                </div>

                <!-- Description Field -->
                <div class="mb-3">
                    <label for="inputDescription" class="form-label">Description</label>
                    <textarea id="inputDescription" name="description" class="form-control" rows="4" required></textarea>
                </div>

                <!-- CSRF Token -->
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Save Book</button> <!-- Adjust dynamically to "Update Book" -->
                </div>
            </form>
        </div>

        <!-- Right Section for Book Image -->
        <div class="col-md-6 text-center">
            <div class="bg-light d-flex justify-content-center align-items-center" style="height: 300px; border: 1px solid #ddd;">
                <p class="text-muted">Book Image Placeholder</p>
            </div>
        </div>
    </div>
</div>


<!-- Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
